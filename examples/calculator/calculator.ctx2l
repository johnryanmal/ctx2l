expr:
| V=sum -> V

sum:
| V=prod -> V
| L=prod '+' R=sum -> $add(L, R)
| L=prod '-' R=sum -> $sub(L, R)

prod:
| V=pow -> V
| L=pow '*' R=prod -> $mul(L, R)
| L=pow '/' R=prod -> $div(L, R)

pow:
| V=value -> V
| L=value '**' R=pow -> $pow(L, R)

value:
| '(' V=expr ')' -> V
| V=DIGITS -> $num(V)

DIGITS:
| [0-9]+

WS >> skip:
| [ \t\r\n\f]+
